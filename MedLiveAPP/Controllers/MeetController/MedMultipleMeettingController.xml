<?xml version="1.0" encoding="UTF-8"?>
<UIView name="containor" layout="flex:1" attr="bgColor:white">
    <FlexScrollView layout="flex:1" attr="vertScroll:true">
        <!-- 流媒体容器 -->
        <UIView name="streamView" layout="padding:5,flexDirection:row,flexWrap:wrap" attr="">
            
        </UIView>
    </FlexScrollView>
    <UIView class="" layout="height:1" attr="bgColor:#9b9b9b"/>

    <UIView class="" layout="flexDirection:row,justifyContent:space-between, paddingVertical:5,paddingHorizontal:25" attr="">
        <FlexTouchView onPress="mute" layout="alignItems:center" attr="">
            <UIImageView name="micOnImg" layout="width:25,aspectRatio:1" attr="source:mic_on"/>
            <UIImageView name="micOffImg" layout="width:25,aspectRatio:1" attr="source:mic_off,hidden:true"/>
            <UILabel name="micLabel" layout="marginTop:5" attr="fontSize:12,color:#333333,text:静音"/>
        </FlexTouchView>

        <FlexTouchView onPress="startVideo" layout="alignItems:center" attr="">
            <UIImageView name="cameraOnImg" layout="width:40,height:25" attr="source:camera_on"/>
            <UIImageView name="cameraOffImg" layout="width:40,height:25,aspectRatio:1" attr="source:camera_off,hidden:true"/>
            <UILabel name="cameraLabel" layout="marginTop:5" attr="fontSize:12,color:#333333,text:关闭视频"/>
        </FlexTouchView>

        <FlexTouchView onPress="shareScreen" layout="alignItems:center" attr="">
            <UIImageView layout="width:25,aspectRatio:1" attr="source:share_screen"/>
            <UILabel name="" layout="marginTop:5" attr="fontSize:12,color:#333333,text:共享屏幕"/>
        </FlexTouchView>

        <FlexTouchView onPress="" layout="alignItems:center" attr="">
            <UIImageView layout="width:25,aspectRatio:1" attr="source:member"/>
            <UILabel name="" layout="marginTop:5" attr="fontSize:12,color:#333333,text:人数(12)"/>
        </FlexTouchView>

        <FlexTouchView onPress="getEnd" layout="alignItems:center" attr="">
            <UIImageView layout="width:25,aspectRatio:1" attr="source:call_off"/>
            <UILabel name="" layout="marginTop:5" attr="fontSize:12,color:#333333,text:结束"/>
        </FlexTouchView>
    </UIView>
</UIView>
